---
import { cx } from "classix"

import Head from "../components/Head.astro"
import { Header } from "../components/react/header"
import Footer from "../components/Footer.astro"
import InfiniteBackground from "./InfiniteBackground.astro"

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} />
  <body
    class={cx(
      "bg-zinc-50 px-6 text-zinc-800",
      "dark:bg-black dark:text-zinc-100",
      "md:px-12"
    )}
  >
    <InfiniteBackground>
      <Header client:load />
      <slot />
      <Footer />
    </InfiniteBackground>
  </body>
</html>
