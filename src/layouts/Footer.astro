---
import { cx } from "classix"

import SocialLinks from "../components/SocialLinks.astro"

const year = new Date().getFullYear()
---

<footer>
  <div
    class={cx(
      "mx-auto flex max-w-7xl flex-col items-center py-12 px-6 ",
      "md:flex-row md:justify-between lg:px-8"
    )}
  >
    <SocialLinks class="md:order-2" />
    <p
      class={cx(
        "mt-8 text-center text-xs leading-5 text-zinc-400",
        "md:order-1 md:mt-0"
      )}
    >
      &copy; {year} Tim Tonelli. All rights reserved.
    </p>
  </div>
</footer>
